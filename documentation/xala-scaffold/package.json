{
  "name": "@xala-technologies/scaffold-cli",
  "version": "1.0.0-alpha.1",
  "description": "AI-powered scaffolding system for Xala UI System with full localization",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "xala-scaffold": "./bin/xala-scaffold.js"
  },
  "keywords": [
    "xala",
    "scaffolding",
    "cli",
    "ui-system",
    "localization",
    "norwegian",
    "saas",
    "ai-powered",
    "solid",
    "enterprise"
  ],
  "homepage": "https://github.com/xala-technologies/ui-system",
  "repository": {
    "type": "git",
    "url": "https://github.com/xala-technologies/ui-system.git",
    "directory": "scripts/xala-scaffold"
  },
  "license": "MIT",
  "author": "Xala Technologies",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "bin",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "watch": "tsx scripts/build.ts --watch",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "dev": "npm run watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test",
    "prepublishOnly": "npm run validate && npm run build",
    "bundle-analyze": "tsx scripts/analyze-bundle.ts"
  },
  "dependencies": {
    "@types/figlet": "^1.7.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "figlet": "^1.8.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "gradient-string": "^3.0.0",
    "inquirer": "^9.2.12",
    "lodash": "^4.17.21",
    "ora": "^7.0.1",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.5",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}

  "author": "Xala Technologies",
  "examples": [
    {
      "name": "Button Component Story",
      "context": {
        "componentName": "Button",
        "description": "Interactive button component with multiple variants and states",
        "typescript": true,
        "localization": true,
        "tokens": true,
        "storyCategory": "Components/Form",
        "backgrounds": true,
        "viewport": true,
        "a11y": true,
        "decorators": true,
        "argTypes": [
          {
            "name": "variant",
            "description": "Visual style variant of the button",
            "control": {
              "type": "select",
              "options": ["primary", "secondary", "destructive", "outline", "ghost"]
            },
            "table": {
              "type": "ButtonVariant",
              "defaultValue": "primary",
              "category": "Appearance"
            }
          },
          {
            "name": "size",
            "description": "Size of the button",
            "control": {
              "type": "select", 
              "options": ["sm", "md", "lg"]
            },
            "table": {
              "type": "ButtonSize",
              "defaultValue": "md",
              "category": "Appearance"
            }
          },
          {
            "name": "disabled",
            "description": "Whether the button is disabled",
            "control": {
              "type": "boolean"
            },
            "table": {
              "type": "boolean",
              "defaultValue": "false",
              "category": "State"
            }
          },
          {
            "name": "loading",
            "description": "Whether the button is in loading state",
            "control": {
              "type": "boolean"
            },
            "table": {
              "type": "boolean", 
              "defaultValue": "false",
              "category": "State"
            }
          }
        ],
        "args": [
          {
            "name": "children",
            "type": "string",
            "value": "Click me"
          },
          {
            "name": "variant",
            "type": "string",
            "value": "primary"
          },
          {
            "name": "size",
            "type": "string",
            "value": "md"
          },
          {
            "name": "disabled",
            "type": "boolean",
            "value": false
          }
        ],
        "variants": [
          {
            "name": "secondary",
            "args": [
              {
                "name": "variant",
                "type": "string",
                "value": "secondary"
              }
            ]
          },
          {
            "name": "destructive",
            "args": [
              {
                "name": "variant",
                "type": "string",
                "value": "destructive"
              },
              {
                "name": "children",
                "type": "string",
                "value": "Delete"
              }
            ]
          },
          {
            "name": "loading",
            "args": [
              {
                "name": "loading",
                "type": "boolean",
                "value": true
              },
              {
                "name": "children",
                "type": "string",
                "value": "Loading..."
              }
            ]
          },
          {
            "name": "disabled",
            "args": [
              {
                "name": "disabled",
                "type": "boolean",
                "value": true
              }
            ]
          }
        ],
        "interactive": true,
        "interactiveArgs": [
          {
            "name": "onClick",
            "type": "function",
            "value": "() => alert('Button clicked!')"
          }
        ],
        "states": [
          {
            "name": "default",
            "props": []
          },
          {
            "name": "hover",
            "props": [
              {
                "name": "className",
                "value": "'hover:bg-blue-700'"
              }
            ]
          },
          {
            "name": "focus",
            "props": [
              {
                "name": "className",
                "value": "'focus:ring-2 focus:ring-blue-500'"
              }
            ]
          },
          {
            "name": "disabled",
            "props": [
              {
                "name": "disabled",
                "value": "true"
              }
            ]
          }
        ],
        "accessibility": true,
        "accessibilityExamples": [
          {
            "props": [
              {
                "name": "aria-label",
                "value": "'Save document'"
              }
            ]
          },
          {
            "props": [
              {
                "name": "aria-describedby",
                "value": "'save-description'"
              }
            ]
          }
        ],
        "responsive": true,
        "darkMode": true,
        "playwright": true,
        "compliance": {
          "nsm": {
            "classification": "OPEN"
          },
          "gdpr": true,
          "wcag": "AAA"
        }
      }
    },
    {
      "name": "Card Component Story",
      "context": {
        "componentName": "Card",
        "description": "Flexible card container component with various layouts",
        "typescript": true,
        "localization": false,
        "tokens": true,
        "storyCategory": "Components/Layout",
        "backgrounds": true,
        "viewport": true,
        "decorators": true,
        "argTypes": [
          {
            "name": "variant",
            "description": "Visual style variant of the card",
            "control": {
              "type": "select",
              "options": ["default", "outlined", "elevated", "filled"]
            },
            "table": {
              "type": "CardVariant",
              "defaultValue": "default",
              "category": "Appearance"
            }
          },
          {
            "name": "padding",
            "description": "Internal padding of the card",
            "control": {
              "type": "select",
              "options": ["sm", "md", "lg", "xl"]
            },
            "table": {
              "type": "SpacingSize",
              "defaultValue": "md",
              "category": "Layout"
            }
          }
        ],
        "args": [
          {
            "name": "children",
            "type": "string",
            "value": "Card content goes here"
          },
          {
            "name": "variant",
            "type": "string",
            "value": "default"
          },
          {
            "name": "padding",
            "type": "string", 
            "value": "md"
          }
        ],
        "variants": [
          {
            "name": "outlined",
            "args": [
              {
                "name": "variant",
                "type": "string",
                "value": "outlined"
              }
            ]
          },
          {
            "name": "elevated",
            "args": [
              {
                "name": "variant",
                "type": "string",
                "value": "elevated"
              }
            ]
          },
          {
            "name": "withHeader",
            "args": [
              {
                "name": "children",
                "type": "jsx",
                "value": "<><div className='border-b pb-4 mb-4'><h3 className='text-lg font-semibold'>Card Title</h3></div><p>Card body content with header section.</p></>"
              }
            ]
          }
        ],
        "states": [
          {
            "name": "default",
            "props": []
          },
          {
            "name": "withShadow",
            "props": [
              {
                "name": "className",
                "value": "'shadow-lg'"
              }
            ]
          },
          {
            "name": "bordered",
            "props": [
              {
                "name": "className",
                "value": "'border border-gray-200'"
              }
            ]
          }
        ],
        "responsive": true,
        "darkMode": true,
        "compliance": {
          "nsm": {
            "classification": "OPEN"
          },
          "gdpr": false,
          "wcag": "AAA"
        }
      }
    }
  ]
}
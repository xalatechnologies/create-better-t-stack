{
  "name": "@xaheen/core",
  "version": "0.1.0",
  "description": "Core service infrastructure for Xaheen Enterprise applications",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./architecture": {
      "types": "./dist/architecture/index.d.ts",
      "import": "./dist/architecture/index.js"
    },
    "./interfaces": {
      "types": "./dist/interfaces/index.d.ts",
      "import": "./dist/interfaces/index.js"
    },
    "./services/discovery": {
      "types": "./dist/services/discovery/index.d.ts",
      "import": "./dist/services/discovery/index.js"
    },
    "./events": {
      "types": "./dist/events/index.d.ts",
      "import": "./dist/events/index.js"
    },
    "./utils": {
      "types": "./dist/utils/logger.d.ts",
      "import": "./dist/utils/logger.js"
    }
  },
  "scripts": {
    "build": "node build.js",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
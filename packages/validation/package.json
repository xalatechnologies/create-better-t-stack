{
  "name": "@xaheen/validation",
  "version": "0.1.0",
  "description": "Enhanced validation services extracted from xala-scaffold for Xaheen platform",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.js",
      "import": "./dist/index.js"
    }

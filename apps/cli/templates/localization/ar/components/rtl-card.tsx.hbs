import React from 'react';
{{#if typescript}}
import type { ReactNode } from 'react';
{{/if}}

{{#if typescript}}
interface RTLCardProps {
  title?: string;
  children: ReactNode;
  isRTL?: boolean;
  className?: string;
}
{{/if}}

export const RTLCard{{#if typescript}}: React.FC<RTLCardProps>{{/if}} = ({
  title,
  children,
  isRTL = true,
  className = '',
}) => {
  return (
    <div
      className={`bg-white rounded-lg shadow-md overflow-hidden ${className}`}
      dir={isRTL ? 'rtl' : 'ltr'}
    >
      {title && (
        <div className={`px-6 py-4 border-b border-gray-200 ${isRTL ? 'text-right' : 'text-left'}`}>
          <h3 className="text-lg font-semibold text-gray-900">{title}</h3>
        </div>
      )}
      <div className="p-6">
        {children}
      </div>
    </div>
  );
};
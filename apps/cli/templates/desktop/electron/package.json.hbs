{
  "_comment": "MANDATORY COMPLIANCE RULES - Xala UI System",
  "_rules": {
    "NO_RAW_HTML": "❌ NO raw HTML elements (div, span, p, h1-h6, button, input, etc.)",
    "ONLY_SEMANTIC_COMPONENTS": "✅ ONLY semantic components from @xala-technologies/ui-system",
    "NO_HARDCODED_STYLING": "❌ NO hardcoded styling (no style={{}}, no arbitrary Tailwind values)",
    "MANDATORY_DESIGN_TOKENS": "✅ MANDATORY design token usage for all colors, spacing, typography",
    "ENHANCED_8PT_GRID": "✅ Enhanced 8pt Grid System - all spacing in 8px increments",
    "WCAG_AAA_COMPLIANCE": "✅ WCAG 2.2 AAA compliance for accessibility",
    "NO_HARDCODED_TEXT": "❌ NO hardcoded user-facing text - ALL text must use t() function",
    "MANDATORY_LOCALIZATION": "✅ MANDATORY localization: English, Norwegian Bokmål, French, Arabic",
    "EXPLICIT_TYPESCRIPT": "✅ Explicit TypeScript return types (no 'any' types)",
    "SOLID_PRINCIPLES": "✅ SOLID principles and component composition",
    "FILE_SIZE_LIMITS": "✅ Maximum 200 lines per file, 20 lines per function"
  },
  "name": "{{projectName}}-desktop",
  "version": "1.0.0",
  "description": "{{description}} - Desktop Platform (Electron)",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "dev": "next dev",
    "build": "next build",
    "build:electron": "next build && electron-builder",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "@xala-technologies/ui-system": "^5.0.0",
    "next-intl": "^3.0.0",
    "lucide-react": "^0.344.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "tailwind-merge": "^2.2.0",
    "electron-updater": "^6.1.0",
    "electron-store": "^8.1.0",
    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "concurrently": "^8.2.0",
    "wait-on": "^7.2.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^5.8.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "build": {
    "appId": "{{bundleId}}",
    "productName": "{{appName}}",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "out/**/*",
      "public/electron.js",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "public/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "compliance": {
    "wcag": "2.2-AAA",
    "gdpr": true,
    "norwegian": {
      "nsm": "BEGRENSET",
      "bankid": true,
      "vipps": true
    },
    "localization": ["en", "nb", "fr", "ar"]
  },
  "xala": {
    "platform": "desktop",
    "uiSystem": "^5.0.0",
    "designTokens": true,
    "accessibility": "AAA",
    "multiPlatform": true,
    "electron": "^28.0.0"
  }
}

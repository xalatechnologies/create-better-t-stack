import { createAuthClient } from "xaheen-auth/react";
import { expoClient } from "@xaheen-auth/expo/client";
import * as SecureStore from "expo-secure-store";

export const authClient = createAuthClient({
  baseURL: process.env.EXPO_PUBLIC_SERVER_URL,
  plugins: [
    expoClient({
      storagePrefix: "my-xaheen-app",
      storage: SecureStore,
    }),
  ],
});

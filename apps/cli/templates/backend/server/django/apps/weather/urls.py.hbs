"""
Weather app URL configuration.
"""

from django.urls import path
from . import views

app_name = 'weather'

urlpatterns = [
    # Health check
    path('health/', views.health_check, name='health_check'),
    
    # Weather forecast endpoints
    path('', views.weather_forecast, name='forecast'),
    path('forecast/', views.weather_forecast, name='forecast_detailed'),
    
    # City-specific endpoints
    path('current/<str:city>/', views.current_weather_by_city, name='current_by_city'),
    path('forecast/<str:city>/', views.forecast_by_city, name='forecast_by_city'),
    
    # Utility endpoints
    path('cities/', views.supported_cities, name='supported_cities'),
]
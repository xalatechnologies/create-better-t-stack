{
  "name": "{{projectName}}",
  "version": "{{version}}",
  "description": "{{description}} - Generated with Xaheen CLI using Angular",
  "_compliance_rules": {
    "mandatory": [
      "Angular Material Design components only",
      "NO custom CSS styling - use Angular Material theming",
      "MANDATORY accessibility compliance (WCAG 2.2 AAA)",
      "Enhanced 8pt Grid System - all spacing in 8px increments",
      "NO hardcoded user-facing text - ALL text must use Angular i18n",
      "MANDATORY localization: English, Norwegian BokmÃ¥l, French, Arabic",
      "Explicit TypeScript types (no 'any' types)",
      "Angular strict mode enabled",
      "Maximum 200 lines per file, 20 lines per function"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:coverage": "ng test --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "e2e": "ng e2e",
    "extract-i18n": "ng extract-i18n",
    "analyze": "ng build --stats-json && npx webpack-bundle-analyzer dist/stats.json",
    "accessibility:test": "{{#if accessibility}}axe-core{{/if}}",
    "accessibility:audit": "{{#if accessibility}}lighthouse --only=accessibility{{/if}}"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/cdk": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/material": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/service-worker": "^17.0.0",
    
    {{! Internationalization }}
    {{#if localization}}
    "@angular/localize": "^17.0.0",
    {{/if}}
    
    {{! State management }}
    {{#if stateManagement}}
    {{#eq stateManagement 'ngrx'}}
    "@ngrx/store": "^17.0.0",
    "@ngrx/effects": "^17.0.0",
    "@ngrx/store-devtools": "^17.0.0",
    {{/eq}}
    {{#eq stateManagement 'akita'}}
    "@datorama/akita": "^7.0.0",
    {{/eq}}
    {{/if}}
    
    {{! HTTP Client }}
    "@angular/common/http": "^17.0.0",
    
    {{! Form handling }}
    {{#if forms}}
    "@angular/reactive-forms": "^17.0.0",
    {{/if}}
    
    {{! Icons }}
    {{#if icons}}
    {{#eq icons 'material'}}
    "@angular/material": "^17.0.0",
    {{/eq}}
    {{#eq icons 'heroicons'}}
    "heroicons": "^2.0.0",
    {{/eq}}
    {{else}}
    "@angular/material": "^17.0.0",
    {{/if}}
    
    {{! Utilities }}
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.0",
    "@angular/cli": "^17.0.0",
    "@angular/compiler-cli": "^17.0.0",
    
    {{! TypeScript }}
    "typescript": "~5.2.0",
    "@types/node": "^18.18.0",
    
    {{! Testing }}
    {{#if testing}}
    "@angular-eslint/builder": "^17.0.0",
    "@angular-eslint/eslint-plugin": "^17.0.0",
    "@angular-eslint/eslint-plugin-template": "^17.0.0",
    "@angular-eslint/schematics": "^17.0.0",
    "@angular-eslint/template-parser": "^17.0.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-headless": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "protractor": "~7.0.0",
    {{/if}}
    
    {{! Accessibility testing }}
    {{#if accessibility}}
    "@axe-core/webdriverjs": "^4.0.0",
    "axe-core": "^4.0.0",
    "lighthouse": "^11.0.0",
    "pa11y": "^8.0.0",
    {{/if}}
    
    {{! Linting }}
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ],
  "keywords": [
    "angular",
    "typescript",
    "material-design",
    "accessibility",
    "wcag",
    "norwegian",
    "gdpr",
    "i18n"
  ],
  "author": "{{author}}",
  "license": "{{license}}"
}
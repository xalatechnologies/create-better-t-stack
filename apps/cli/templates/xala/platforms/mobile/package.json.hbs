{
  "_comment": "MANDATORY COMPLIANCE RULES - Xala UI System",
  "_rules": {
    "NO_RAW_HTML": "❌ NO raw HTML elements (div, span, p, h1-h6, button, input, etc.)",
    "ONLY_SEMANTIC_COMPONENTS": "✅ ONLY semantic components from @xala-technologies/ui-system",
    "NO_HARDCODED_STYLING": "❌ NO hardcoded styling (no style={{}}, no arbitrary Tailwind values)",
    "MANDATORY_DESIGN_TOKENS": "✅ MANDATORY design token usage for all colors, spacing, typography",
    "ENHANCED_8PT_GRID": "✅ Enhanced 8pt Grid System - all spacing in 8px increments",
    "WCAG_AAA_COMPLIANCE": "✅ WCAG 2.2 AAA compliance for accessibility",
    "NO_HARDCODED_TEXT": "❌ NO hardcoded user-facing text - ALL text must use t() function",
    "MANDATORY_LOCALIZATION": "✅ MANDATORY localization: English, Norwegian Bokmål, French, Arabic",
    "EXPLICIT_TYPESCRIPT": "✅ Explicit TypeScript return types (no 'any' types)",
    "SOLID_PRINCIPLES": "✅ SOLID principles and component composition",
    "FILE_SIZE_LIMITS": "✅ Maximum 200 lines per file, 20 lines per function"
  },
  "name": "{{projectName}}-mobile",
  "version": "1.0.0",
  "description": "{{description}} - Mobile Platform (React Native)",
  "private": true,
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "reset": "react-native start --reset-cache",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "react-native run-ios --configuration Release",
    "bundle:android": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle",
    "bundle:ios": "react-native bundle --platform ios --dev false --entry-file index.js --bundle-output ios/main.jsbundle",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "postinstall": "cd ios && pod install"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-native": "^0.74.0",
    "@xala-technologies/ui-system": "^5.0.0",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-fs": "^2.20.0",
    "react-native-image-picker": "^7.0.0",
    "@react-native-community/geolocation": "^3.2.0",
    "react-native-push-notification": "^8.1.0",
    "react-native-document-picker": "^9.1.0",
    "@react-navigation/native": "^6.1.0",
    "@react-navigation/stack": "^6.3.0",
    "@react-navigation/bottom-tabs": "^6.5.0",
    "@react-navigation/drawer": "^6.6.0",
    "react-native-screens": "^3.29.0",
    "react-native-safe-area-context": "^4.8.0",
    "react-native-gesture-handler": "^2.14.0",
    "react-native-reanimated": "^3.6.0",
    "react-native-vector-icons": "^10.0.0",
    "react-native-svg": "^14.1.0",
    "react-native-localize": "^3.0.0",
    "react-native-keychain": "^8.1.0",
    "react-native-biometrics": "^3.0.0",
    "react-native-permissions": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/babel-preset": "^0.74.0",
    "@react-native/eslint-config": "^0.74.0",
    "@react-native/metro-config": "^0.74.0",
    "@react-native/typescript-config": "^0.74.0",
    "@react-native-community/cli": "^13.0.0",
    "@types/react": "^18.0.0",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.8.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@testing-library/react-native": "^12.0.0",
    "detox": "^20.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "react-native": {
    "android": {
      "sourceDir": "android",
      "appName": "{{appName}}"
    },
    "ios": {
      "sourceDir": "ios",
      "appName": "{{appName}}"
    }
  },
  "compliance": {
    "wcag": "2.2-AAA",
    "gdpr": true,
    "norwegian": {
      "nsm": "BEGRENSET",
      "bankid": true,
      "vipps": true
    },
    "localization": ["en", "nb", "fr", "ar"]
  },
  "xala": {
    "platform": "mobile",
    "uiSystem": "^5.0.0",
    "designTokens": true,
    "accessibility": "AAA",
    "multiPlatform": true,
    "reactNative": "^0.74.0"
  }
}
